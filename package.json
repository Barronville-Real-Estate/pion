{
  "dependencies": {
    "@pion/container": "file:packages/container",
    "@pion/utilities": "file:packages/utilities"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "jest-extended": "^0.11.5",
    "json5": "^2.1.3",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "npx": "^10.2.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "name": "root",
  "private": true,
  "scripts": {
    "git-pre-commit-hook": "npx npm-run-all git-pre-commit-hook:step-1 git-pre-commit-hook:step-2",
    "git-pre-commit-hook:step-1": "npx lerna run --scope \"@pion/*\" generate-documentation",
    "git-pre-commit-hook:step-2": "npx lerna run --scope \"@pion/*\" git-stage-documentation",
    "npm-update-version:major": "npx lerna version --no-git-tag-version --no-push --yes major",
    "npm-update-version:minor": "npx lerna version --no-git-tag-version --no-push --yes minor",
    "npm-update-version:patch": "npx lerna version --no-git-tag-version --no-push --yes patch",
    "test": "npx jest",
    "test:watch": "npm run test -- --watch"
  }
}
